# 服务器配置
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/resume-helper

# JWT配置
JWT_SECRET=your-secret-key-should-be-long-and-secure
JWT_EXPIRES_IN=24h

# 上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 邮件配置
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=user@example.com
EMAIL_PASS=password
EMAIL_FROM=noreply@resume-helper.com

# API限流配置
RATE_LIMIT_WINDOW=900000 # 15分钟
RATE_LIMIT_MAX=100 # 每IP最多请求数

# 日志配置
LOG_DIR=logs
LOG_LEVEL=info

# AI服务配置
AI_PROVIDER=openai
AI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# 前端配置
CLIENT_URL=http://localhost:3000

# CORS配置
CORS_ORIGIN=http://localhost:3000 